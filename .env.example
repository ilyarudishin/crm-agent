PORT=3000
NODE_ENV=development

# Notion Configuration
NOTION_API_KEY=your_notion_api_key_here
NOTION_DATABASE_ID=your_notion_database_id_here

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Required for unique group creation
TELEGRAM_ADMIN_USER_ID=your_telegram_user_id_here
TEAM_TELEGRAM_IDS=user_id_1,user_id_2,user_id_3

# Optional: For MTProto client (advanced)
TELEGRAM_API_ID=your_api_id_from_my_telegram_org
TELEGRAM_API_HASH=your_api_hash_from_my_telegram_org
TELEGRAM_PHONE=your_phone_number
TELEGRAM_SESSION_STRING=your_session_string

# Optional: Third party integrations
CLEARBIT_API_KEY=your_clearbit_api_key_here

# Optional: Webhook security
WEBHOOK_SECRET=your_webhook_secret_here